{
  "name": "thesis-project-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll",
    "test:coverage": "jest --coverage --watchAll=false",
    "run_tsc_and_node": "tsc && node dist/app.js",
    "build": "tsc",
    "start": "nodemon",
    "createDB": "sequelize db:create thesis_db",
    "createDB_and_mockData": "sequelize db:create thesis_db && npm run migrate && npm run seed",
    "removeDB": "sequelize db:drop thesis_db",
    "migrate": "sequelize db:migrate",
    "migrate-down": "sequelize db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "seed-down": "npx sequelize-cli db:seed:undo",
    "startprod": " sequelize db:migrate && node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juansp92/thesisProjectBackend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/juansp92/thesisProjectBackend/issues"
  },
  "homepage": "https://github.com/juansp92/thesisProjectBackend#readme",
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.0.27",
    "cz-conventional-changelog": "^3.2.0",
    "jest": "^26.4.0",
    "ts-jest": "^26.2.0",
    "tslint": "^5.12.1",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cloudinary": "^1.22.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.11",
    "nodemon": "^2.0.4",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.4",
    "sequelize-cli": "^6.2.0",
    "stripe": "^8.89.0",
    "typescript-tslint-plugin": "^0.5.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!.eslintrc.js",
      "!**/coverage/**",
      "!**/migrations/**",
      "!**/seeders/**",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  }
}
